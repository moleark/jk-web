<%- include('headers/header.ejs') -%>
<%- include('headers/home-header.ejs') -%>

<%
    var len = categories.length;
%>
<div class="container my-3">
    <div class="row">
        <div class="col-sm-9">
            <%
            let {caption, icon, subs, color} = categories[current];
            let arr = [];
            let a;
            console.log(categories[current],'caption')
        %>
            <div class="h5 text-<%=color%> text-center border-<%=color%> py-3"
                style="border-bottom-width: 0.2rem;border-bottom-style: solid;">
                <img class="position-absolute" src="<%=icon%>"
                    style="left:1.5rem;top:-0.3rem; width: 4rem;height:4rem;" />
                <b><%=caption%></b>
            </div>

            <% for (let s of subs) {
                let {title} = s.sub[0];
                arr.push(title)
            %>
            <% } %>

            <% for (let k=0; k<arr.length; k++) {
           
                console.log(arr[k],k)
            %>
            <div class="border-muted border-bottom p-3 my-2">
                <a href="<%=current%>/classifyy/<%=k%>"><%=arr[k]%></a>
            </div>
            <% } %>
        </div>
        <div class="col-sm-3">
            <ul class="list-group">
                <% for (let i=0; i<len; i++) { 
            let {caption, icon, subs, color} = categories[i];
            %>
                <a href="<%=i%>"
                    class="list-group-item list-group-item-action <%=i==current&&'list-group-item-primary'%> px-2 mb-3"
                    target="blank">
                    <img class="float-left" src="<%=icon%>"
                        style="width: 2.5rem;height:2.5rem; margin: -0.3rem 0.5rem -0.3rem 0;" />
                    <div class="mb-2 text-center text-<%=color%>"><b><%=caption%></b></div>
                    <div class="small text-muted">
                        <span class="small"><%=subs.map(v=>v.sub[0].title).join(' / ')%></span>
                    </div>
                </a>
                <% } %>
            </ul>
        </div>
    </div>
</div>
<%- include('footers/home-footer.ejs') -%>