<script>
    function search(e) {
        e.preventDefault();
        let key = e.target.keyInput.value;
        if (key) {
            // location.href = '/shop?type=productlist&key=' + encodeURIComponent(key);
            location.href = '<%=shopJsPath.shopmain%>search/' + encodeURIComponent(key);
        }
    }
</script>

