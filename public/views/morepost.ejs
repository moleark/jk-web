<%- include('headers/header.ejs') -%>
<%- include('headers/home-header.ejs') -%>

<div class="container">
    <ul class="list-group">
        <% for(var i=0;i<post.length;i++){ 
                let {id, caption, disp, date, by, image, sumHits} = post[i];
            %>
        <a href="<%=path+id%>" class="list-group-item-action py-2 px-1 border-bottom">
            <div class="row">
                <div class="col-10 d-flex align-items-center">
                    <div class="col d-flex align-items-center">
                        <div class="w-100">
                            <div class="d-flex w-100 justify-content-between">
                                <div class="bold mb-1 text-dark-blue"><%=caption%></div>
                            </div>
                            <p class="mb-1 font-song mt-1"><%=disp%></p>
                            <div class="d-flex small text-gray mt-2">
                                <div class="col-2 p-0">
                                    <% if (sumHits) { %>
                                        <div class="mr-4"><%=sumHits%>次阅读</div>
                                    <% } else { %>
                                        <div class="mr-4">0次阅读</div>
                                        <% } %>
                                </div>
                                <div class="flex-grow-1">发表于<%=easyTime(date, true)%></div>
                                <% if (by) { %>
                                <small class="font-song">信息来源：<%=by%></small>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2 d-flex align-items-center">
                    <% if (image) {%>
                            <div class="w-100 h-100 bg-center-img h-max-6c" style="background-image: url('<%=image%>');">
                            </div>
                        <% } %>
                </div>
              
                </div>
        </a>
        <% } %>
    </ul>
    <div class="text-center mt-2">
        <% if (pageCount==0) { %>
        <span>上一页</span>
        <% } else { %>
        <a href="<%=nextpage%>" class="py-2 px-1 border-bottom">上一页</a>
        <% } %>

        <% if (post.length<30) { %>
        <span>下一页</span>
        <% } else { %>
        <a href="<%=nextpage%>" class="py-2 px-1 border-bottom">下一页</a>
        <% } %>
    </div>
</div>



<%- include('footers/home-footer.ejs') -%>