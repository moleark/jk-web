<ul class="list-group list-group-horizontal-sm">
    <% for (let i=0; i<categories.length; i++) { 
        let {caption, icon, subs, color} = categories[i];
    %>
        <a href="category/<%=i%>" class="list-group-item list-group-item-action px-2" target="blank">
            <img class="float-left" src="<%=icon%>" style="width: 2.5rem;height:2.5rem; margin: -0.3rem 0.5rem -0.3rem 0;" />
            <div class="mb-2 text-center text-<%=color%>"><b><%=caption%></b></div>
            <div class="small text-muted">
                <span class="small"><%=subs.map(v=>v.sub).join(' / ')%></span>
            </div>
        </a>
    <% } %>
</ul>

<div style="margin-top: 0.1rem; height:0.1rem;background-color:darkgray;"></div>

<div class="row">
    <div class="col-sm-3 my-3">
        <div class="bg-warning small text-white rounded-pill px-4 pt-1 pb-2 mb-1">产品快讯</div>
        <ul class="list-group">
            <% for (let pn of productNews) {
                let {caption} = pn;
            %>
                <a href="#" class="list-group-item list-group-item-action py-2 pl-2">
                    <small class="mr-3"><small><i class="text-warning fa fa-chevron-right"></i></small></small><%=caption%>
                </a>
            <% } %>
        </ul>        
        <div class="bg-success small text-white rounded-pill px-4 pt-1 pb-2 mt-3 mb-1">电子期刊</div>
        <ul class="list-group">
            <% for (let pn of newsletter) {
                let {caption} = pn;
            %>
                <a href="#" class="list-group-item list-group-item-action py-2 pl-2">
                    <small class="mr-3"><i class="text-success fa fa-chevron-circle-right"></i></small><%=caption%>
                </a>
            <% } %>
        </ul>        
    </div>
    <div class="col-sm-6 my-3">
        <div class="border border-success px-4 py-2 rounded font-weight-bold text-success mb-1">
            行业动态
        </div>
        <ul class="list-group">
            <% for(var i=0;i<news.length;i++){ 
                let {id, caption, disp, date, by, image} = news[i];
            %>
                <a href="<%=path+id%>" class="list-group-item-action d-flex py-1 border-bottom">
                    <% if (image) {%>
                        <img src="<%=image%>" class="mr-2 w-4c h-4c" />
                    <% } %>
                    <div class="w-100">
                        <div class="d-flex w-100 justify-content-between">
                            <div class="bold mb-1"><%=caption%></div>
                            <small class="text-muted text-right" style="min-width: 3rem;"><%=easyTime(date, true)%></small>
                        </div>
                        <p class="mb-1 font-song"><%=disp%></p>
                        <% if (by) { %>
                            <small class="text-muted font-song">信息来源：<%=by%></small>
                        <% } %>
                    </div>
                </a>
            <% } %>
        </ul>        
    </div>
    <div class="col-sm-3 my-3">
        <div class="bg-info text-white small rounded-pill px-4 pt-1 pb-2 mb-1">最新产品</div>
        <ul class="list-group">
            <% for (let pn of latestProducts) {
                let {caption} = pn;
            %>
                <a href="#" class="list-group-item list-group-item-action py-3"><%=caption%></a>    
            <% } %>
        </ul>        
    </div>
</div>

</div>

